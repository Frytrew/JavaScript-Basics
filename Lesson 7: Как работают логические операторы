/*
  &&  |  true  |  false
true  |  true  |  false
false |  false |  false

  ||  |  true  |  false
true  |  true  |  true
false |  true |  false

&& (и) - true если все значения true
|| (или) - true хоть одно значение true
! (нет) - инвентирует true или false
*/

console.log (true && true)
console.log (true && false)

console.log (true || false)

console.log (!false)
console.log (!true)
console.log (!!true) // !!true => !false => true
console.log (!!!true)

console.log ((false && true) || (true || false) || !true)
//                 false     ||      true       || false => true
