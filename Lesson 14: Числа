console.log(42)
console.log(-42)
console.log(1.5)
console.log(-8/3) // -2.6666
console.log(0xAB) // 171
console.log(2e3) // 2000
console.log(NaN) // not a number
console.log(123 / 0)

var fortyTwo = 42
var delta = 8 / 3
console.log(fortyTwo.toString()) // приводим к строке
console.log(+delta.toFixed(1) + 4) // + в начале приводит к числу
console.log(parseFloat(delta.toFixed(2))) // parseFloat приводит к числу
console.log(parseInt(delta.toFixed(2))) // parseInt работает только с целыми числами

console.log(isNaN(NaN))
console.log(isNaN(45)) // проверка, правильное ли число и можно ли с ним работать
console.log(isFinite(1 / 0))  // проверка, бесконечность ли false
console.log(isFinite(999999999999)) // тут результат не бесконечен true
